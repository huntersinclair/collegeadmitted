{
  "family": "collegeadmitted-prod",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "containerDefinitions": [
    {
      "name": "collegeadmitted-backend",
      "image": "<ECR_REGISTRY>/collegeadmitted-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "ENVIRONMENT",
          "value": "production"
        }
      ],
      "secrets": [
        {
          "name": "POSTGRES_USER",
          "valueFrom": "arn:aws:ssm:us-west-2:${AWS_ACCOUNT_ID}:parameter/prod/db/user"
        },
        {
          "name": "POSTGRES_PASSWORD",
          "valueFrom": "arn:aws:ssm:us-west-2:${AWS_ACCOUNT_ID}:parameter/prod/db/password"
        },
        {
          "name": "POSTGRES_DB",
          "valueFrom": "arn:aws:ssm:us-west-2:${AWS_ACCOUNT_ID}:parameter/prod/db/name"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:${AWS_ACCOUNT_ID}:parameter/prod/app/secret"
        },
        {
          "name": "MISTRAL_API_KEY",
          "valueFrom": "arn:aws:ssm:us-west-2:${AWS_ACCOUNT_ID}:parameter/prod/mistral/api_key"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/collegeadmitted-prod",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "backend"
        }
      }
    },
    {
      "name": "collegeadmitted-frontend",
      "image": "<ECR_REGISTRY>/collegeadmitted-frontend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "NODE_ENV",
          "value": "production"
        },
        {
          "name": "REACT_APP_API_URL",
          "value": "https://api.collegeadmitted.com"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/collegeadmitted-prod",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "frontend"
        }
      }
    }
  ]
} 